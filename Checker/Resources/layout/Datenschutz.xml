<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            android:visibility="invisible" />
        <TextView
            android:text="Datenschutz"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:id="@+id/textView1"
            android:layout_gravity="center"
            android:gravity="center" 
            android:textColor="#FF018786"/>
         <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView3"
            android:visibility="invisible" />
        <TextView
            android:text="Hiermit bestätige ich, dass ich mit der anonymsierten Speicherung meiner Daten einverstanden bin. Ich habe die Datenschutzerklärung gründlich durchgelesen und habe bewusst das Häcken gesetzt. 
Wenn Sie mit der Datenschutzerklärung nicht einverstanden sind, können Sie leider die Anwendung nicht benutzten."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:id="@+id/textView4"
            android:textColor="@android:color/black" />
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/textView8"
            android:visibility="invisible" />
        <CheckBox
            android:text="Einverständins Erklärung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1"
            android:textColor="@android:color/black" />
          <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView5"
            android:visibility="invisible" />
              <Button
            android:text="Weiter"
            android:layout_width="200dp"
            android:layout_height="110dp"
            android:id="@id/btn_weiter"
            android:backgroundTint="#FF018786"
            android:layout_gravity="center" 
            android:onClick="btn_weiter"/>


    </LinearLayout>
</RelativeLayout>
