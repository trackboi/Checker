<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            android:visibility="invisible" />
        <TextView
            android:text="Dashboard"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:id="@+id/textView1"
            android:layout_gravity="center"
            android:gravity="center" 
            android:textColor="#FF018786"/>
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/textView3"
            android:visibility="invisible" />
        <Button
            android:text="Corona Checker"
            android:layout_width="330dp"
            android:layout_height="95dp"
            android:id="@+id/btn_Checker"
            android:backgroundTint="#FF018786"
            android:layout_gravity="center"
            android:onClick="btn_Checker"/>
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/textView5"
            android:visibility="invisible" />
        <Button
            android:text="Corona Umfrage"
            android:layout_width="330dp"
             android:layout_height="95dp"
            android:id="@+id/button2"
            android:backgroundTint="#FF018786"
            android:layout_gravity="center" />
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            android:visibility="invisible" />
        <Button
            android:text="Corona Statistik"
            android:layout_width="330dp"
           android:layout_height="95dp"
            android:id="@+id/corona_stats"
            android:backgroundTint="#FF018786"
            android:layout_gravity="center" 
            android:onClick="coronaStats"/>
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView6"
            android:visibility="invisible" />
        <Button
            android:text="Notruf"
            android:layout_width="330dp"
            android:layout_height="95dp"
            android:id="@+id/btn_Notruf"
            android:backgroundTint="#FF018786"
            android:layout_gravity="center"
            android:onClick="btn_Notruf"/>

     

    </LinearLayout>
</RelativeLayout>
