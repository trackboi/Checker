<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minWidth="25px"
    android:minHeight="25px">
 
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/textView2"
            android:visibility="invisible" />
        <TextView
            android:text="Corona Checker"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="25dp"
            android:id="@+id/textView1"
            android:layout_gravity="center"
            android:gravity="center" 
            android:textColor="#FF018786"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView3"
            android:visibility="invisible"/>
        <TextView
            android:text="Ihr Score"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/textView4"
            android:textSize="25dp"
            android:textColor="#ff01579b"
            android:gravity="center" />
       <TextView
 
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/textView"  
            android:visibility="invisible"/>
        <TextView
            android:text="Text"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/textView5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="25dp"/>

          <TextView
 
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/textView7"  
            android:visibility="invisible"/>
        <TextView
            android:text="Ist Ihr Score zwischen 0 - 5 besteht eine geringe Wahrscheinlichkeit.

Ist Ihr Score zwischen 6 - 19 reduzieren Sie bitte ihre Kontakte und achten Sie auf weitere typische Symptome. 

Haben Sie eine Score zwischen 20 - 45 machen Sie schnellstmöglich einen Covid 19 Test."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" 
            android:textColor="@android:color/black"
            android:textSize="18dp"/>


        
 
    </LinearLayout>
</RelativeLayout>


